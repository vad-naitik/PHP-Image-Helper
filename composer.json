            "role": "Developer"
        }
    ],
	
    "support": {
        "source": "https://github.com/vad-naitik/PHP-Image-Helper",
        "issues": "https://github.com/vad-naitik/PHP-Image-Helper/issues"
    },
	
    "require": {
        "php": ">=7.2.0",
        "ext-gd": "*",
        "ext-fileinfo": "*"
    },
    "require-dev": {
    	"phpunit/phpunit": "^8.5",
        "apigen/apigen": "^4.1",
        "php-coveralls/php-coveralls": "^2.1",
        "ext-exif": "*",
        "ext-gd": "*"
    },
	"suggest":
    {
        "ext-exif": "Auto-rotate jpeg files"
    },
    "autoload": {
    	"psr-4":
        {
            "VadNaitik\\": "src/"
        }
    },
    "autoload-dev": {
    	"psr-4":
        {
            "VadNaitik\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "funding": [
